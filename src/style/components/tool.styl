

/*! Tool Menu */

tool($theme)
  background: $theme.paper
  color: $theme.text

theme(tool, "tool")

.fika-app
  .fika-tool
    position: fixed
    right: -224px;
    top: 32px
    height: 48px
    width: 280px
    padding: 6px 8px
    display flex
    radius(24px)
    box-shadow 0 2px 12px 0 rgba(0,0,0,.24)
    short-transition()
    cursor pointer
    $z-index(tool)
    user-select: none;
    -webkit-user-select: none;
    @media print
      display none

    *
      sans-serif()

    > button
      margin-left 0 !important
      margint-right 0
      margin-bottom 0
      margin-top 0
      position: relative
      overflow: visible

    &-on
      transform: translateX(-168px)

      #fika-tool-btn
        transform rotate(180deg)

#fika-fullscreen
  svg
    &:first-child
      display none
    &:nth-child(2)
      display block

  &.fs-on svg
    &:first-child
      display block
    &:nth-child(2)
      display none

#fika-autopilot-local
  svg
    &:first-child
      display none
    &:nth-child(2)
      display block
  &.on svg
    &:first-child
      display block
    &:nth-child(2)
      display none

#fika-tool-btn.fika-whats-new[data-whats-new="menu"]
  transform: translateX(0)
  animation: fika-shake 5s cubic-bezier(.36,.07,.19,.97) infinite;

@keyframes fika-shake
  10%, 26%
    transform: translateX(-1px);

  12%, 24%
    transform: translateX(2px);

  14%, 18%, 22%
    transform: translateX(-4px);

  16%, 20%
    transform: translateX(4px);

  26%, 100%
    transform: translateX(0)