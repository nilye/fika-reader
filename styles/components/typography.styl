@import '../variables.styl'

// about web safe fonts: https://www.cssfontstack.com/
$fonts := {
  courier: "Courier, 'Courier New', 'Lucida Sans Typewriter', 'Lucida Typewriter', monospace",
  georgia: "Georgia, Times, 'Times New Roman', serif",
  merriweather: "Merriweather, Garamond, serif",
  open-sans: "'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif"
  palatino: "Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', serif"
  verdana: "Verdana, Geneva, sans-serif"
}

for $name, $font in $fonts
  .f-font-{$name}
  .{$name}
    font-family unquote($font) !important


$heading($base)
  $rank = 1.5 1.25 1.1 1 0.9 0.83
  for $i in (1..6)
    h{$i}
      font-size: round($base*$rank[$i - 1])
      line-height: 1.3;


.f-size-small
  &.f-article
    $margin(y, 7)
    max-width 640px
  .f-title
    font-size:32px
  .f-content
    *
      font-size: 17px
      line-height 28px
    $heading(17px)


.f-size-medium
  &.f-article
    $margin(y, 6)
    max-width: 720px
  .f-title
    font-size:40px
  .f-content
    *
      font-size: 21px
      line-height 32px
    $heading(21px)

.f-size-large
  &.f-article
    $margin(y, 6)
    max-width: 720px
  .f-title
    font-size:48px
  .f-content
    *
      font-size: 26px
      line-height 36px
    $heading(26px)
