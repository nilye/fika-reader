@import "../variables.styl"

f-toc($theme)
  a
    & ,&:link ,&:visited ,&:active
      color: $theme.text


theme(f-toc, 'f-toc')

.f-toc
  sans-serif()
  $padding(a, 1)
  *
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    font-weight normal

  a
    display block
    cursor pointer
    text-decoration none
    $padding(y,2)
    &:hover
      text-decoration underline

    *
      $margin(y,0)
      line-height 1.2
    h1
      font-size: 16px
      opacity 1
    h2
      font-size: 15px
      padding-left:8px
      opacity 0.9
    h3
      font-size: 15px
      padding-left:16px
      opacity 0.8
    h4
      font-size: 14px
      padding-left:24px
      opacity 0.75
    h5
      font-size: 14px
      padding-left:32px
      opacity 0.75
    h6
      font-size: 14px
      padding-left:40px
      opacity 0.7